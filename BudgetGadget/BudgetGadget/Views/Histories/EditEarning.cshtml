    @model BudgetGadget.Entity.Earning

    @{
        ViewBag.Title = "Edit";
        Layout = "~/Views/Shared/_LayoutHistory.cshtml";
    }

    <h2 style="color: white">Edit</h2>
<div class="container body-content" style="height:100%; width:100%">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Source, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: white" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control", @style = "margin-right:60px;" } })
                    @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SourceAmount, htmlAttributes: new { @class = "control-label col-md-2", @style="color: white" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SourceAmount, new { htmlAttributes = new { @class = "form-control", @style = "margin-right:60px;" } })
                    @Html.ValidationMessageFor(model => model.SourceAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.Month)
            @Html.HiddenFor(model => model.Date)


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </div>
    <div>
        @Html.ActionLink("Back to UserProfile", "UserProfile", "Home",null, new { @style = " color: #2ac110; font-size:20px; margin-left: -52%;padding-top: 80px;" })
    </div>

